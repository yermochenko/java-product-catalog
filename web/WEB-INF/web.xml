<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="true">

    <display-name>My First Web-Application "Test"</display-name>

    <servlet>
      <servlet-name>TestServlet</servlet-name>
      <servlet-class>org.itstep.test.TestServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>ProductListServlet</servlet-name>
      <servlet-class>org.itstep.web.ProductListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductListServlet</servlet-name>
        <url-pattern>/product/list.html</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>ProductEditServlet</servlet-name>
      <servlet-class>org.itstep.web.ProductEditServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductEditServlet</servlet-name>
        <url-pattern>/product/edit.html</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>ProductSaveServlet</servlet-name>
      <servlet-class>org.itstep.web.ProductSaveServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductSaveServlet</servlet-name>
        <url-pattern>/product/save.html</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>ProductDeleteServlet</servlet-name>
      <servlet-class>org.itstep.web.ProductDeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductDeleteServlet</servlet-name>
        <url-pattern>/product/delete.html</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>org.itstep.web.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>org.itstep.web.ApplicationInitializer</listener-class>
    </listener>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
